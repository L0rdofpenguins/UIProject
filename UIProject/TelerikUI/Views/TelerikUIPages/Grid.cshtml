@{
    ViewData["Title"] = "Grid";
}

<h1>Grid</h1>

@(Html.Kendo().Grid<OrderDTO>()
            .Name("grid")
            .Columns(columns =>
            {
                columns.Bound(c => c.OrderId).Width(230);
                columns.Bound(c => c.StartDate).Format("{0:dd/MM/yyyy h:mm tt}").Width(500);
                columns.Bound(c => c.FinishDate).Format("{0:dd/MM/yyyy h:mm tt}");
            })
            .HtmlAttributes(new { style = "height: 600px;" })
            .Scrollable()
            .Groupable()
            .Sortable()
            .Pageable(pageable => pageable
                .Refresh(true)
                .PageSizes(true)
                .ButtonCount(5))
            .DataSource(dataSource => dataSource
                .Ajax()
                .Read(read => read.Action("ReadOrders", "TelerikUIPages"))
            )
)
