@{
    ViewData["Title"] = "Drag and Drop";
}


<h1>Drag and Drop</h1>


<div class="demo-section k-content">
    @(Html.Kendo().Upload()
        .Name("files")
        .Async(a => a
            .Save("SaveAsync", "TelerikUIPages")
            .Remove("Remove", "TelerikUIPages")
            .AutoUpload(false)
        )
        .ShowFileList(true)
